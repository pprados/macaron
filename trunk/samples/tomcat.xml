<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<?xml-stylesheet href="audit-to-xhtml.xslt" type="text/xsl"?>

<audit 
	xmlns="http://macaron.googlecode.com/1.0/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 	xsi:schemaLocation="http://macaron.googlecode.com/1.0/ http://macaron.googlecode.com/svn/trunk/audit/src/main/resources/com/googlecode/macaron/audit/audit.xsd"
	ignoreFilenames="^([^_]+_[a-z]{2}(_[A-Z]{2}(_[a-z]{1,3})?)?\.properties)|(.+\.(xsd|dtd|txt))$"
>

	<!-- Same package from differents jar. -->
	<packages>
		<package name="org/apache/">
			<context>jasper.jar</context>
			<context>catalina.jar</context>
		</package>
		<package name="org/apache/catalina/util/">
			<context>catalina-ant.jar</context>
			<context>catalina.jar</context>
		</package>
		<package name="org/apache/catalina/loader/">
			<context>bootstrap.jar</context>
			<context>catalina.jar</context>
		</package>
		<package name="org/apache/catalina/security/">
			<context>bootstrap.jar</context>
			<context>catalina.jar</context>
		</package>
		<package name="org/apache/catalina/startup/">
			<context>bootstrap.jar</context>
			<context>catalina.jar</context>
		</package>
		<package name="org/apache/naming/">
			<context>bootstrap.jar</context>
			<context>catalina.jar</context>
		</package>
	</packages>

	<!-- Same name with different package. -->
	<filenames>
		<filename name="LocalStrings.properties">
			<context>el-api.jar!javax/el/</context>
			<context>jasper.jar!org/apache/jasper/resources/</context>
			<context>catalina-tribes.jar!org/apache/catalina/tribes/</context>
			<context>tomcat-coyote.jar!org/apache/coyote/ajp/</context>
			<context>servlet-api.jar!javax/servlet/</context>
			<context>catalina.jar!org/apache/catalina/authenticator/</context>
			<context>catalina-ha.jar!org/apache/catalina/ha/</context>
		</filename>
		<filename name="mbeans-descriptors.xml">
			<context>jasper.jar!org/apache/jasper/servlet/</context>
			<context>catalina-tribes.jar!org/apache/catalina/tribes/</context>
			<context>tomcat-coyote.jar!org/apache/jk/</context>
			<context>catalina.jar!org/apache/catalina/authenticator/</context>
			<context>catalina-ha.jar!org/apache/catalina/ha/authenticator/</context>
		</filename>
		<filename name="catalina.properties">
			<context>bootstrap.jar!org/apache/catalina/startup/</context>
			<context>catalina.jar!org/apache/catalina/startup/</context>
		</filename>
	</filenames>

	<!-- Same basename with differents extensions in same package. -->
	<basenames/>

	<!-- Services in jar. -->
	<services/>
</audit>
