<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.googlecode.macaron</groupId>
	<artifactId>seal</artifactId>
	<name>seal</name>
	<version>1.0</version>
	<description>Tools to seal jar, war, ear and rar.</description>
	<url>${url.home}/${project.name}</url>

	<parent>
		<artifactId>macaron</artifactId>
		<groupId>com.googlecode.macaron</groupId>
		<version>1.0</version>
	</parent>

	<distributionManagement>
		<site>
			<id>${server.id}</id>
			<url>${scp.home}/macaron/${project.name}</url>
		</site>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>5</source>
					<target>5</target>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<index>false</index>
						<manifest>
							<mainClass>com.googlecode.macaron.sealed.Seal
							</mainClass>
						</manifest>
						<manifestEntries>
							<Sealed>true</Sealed>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>

		</plugins>
	</build>

	<dependencies>
	</dependencies>
</project>
